@model IEnumerable<VehiculosWebApp.Models.ALQUILER>

@{
    ViewBag.Title = "Index";
}

<h2>Alquiler</h2>

<button type="button" class="btn btn-light" >@Html.ActionLink("Nuevo", "Create")</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Localizacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaDeEntrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaDeDevolucion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CLIENTE.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VEHICULO.Marca)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Localizacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDeEntrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDeDevolucion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CLIENTE.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VEHICULO.Marca)
        </td>
        <td>
            <button type="button" class="btn btn-light">@Html.ActionLink("Editar", "Edit", new { id = item.IdAlquiler }) </button>
            <button type="button" class="btn btn-light">@Html.ActionLink("Detalles", "Details", new { id = item.IdAlquiler }) </button>
            <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Eliminar", "Delete", new { id = item.IdAlquiler })</button>

        </td>
    </tr>
}

</table>
