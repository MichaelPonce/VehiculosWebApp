@model IEnumerable<VehiculosWebApp.Models.VEHICULO>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<button type="button" class="btn btn-light">@Html.ActionLink("Nuevo", "Create")</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pasajeros)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pasajeros)
        </td>
        <td>

            <button type="button" class="btn btn-light">@Html.ActionLink("Editar", "Edit", new { id = item.Placa }) </button>
            <button type="button" class="btn btn-light">@Html.ActionLink("Detalles", "Details", new { id = item.Placa }) </button>
            <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Eliminar", "Delete", new { id = item.Placa })</button>

        </td>
    </tr>
}

</table>
